<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-7 mx-auto shadow-sm">
          <form action="/addtask" method="post">
            <input
              type="text"
              placeholder="Add Task"
              class="form-control my-2"
              name="task"
            />

            <button type="submit" class="btn btn-success w-100 my-2">
              +Add
            </button>
          </form>
          
        </div>
      </div>
    </div>

    <% for( let index = 0; index < alltasks.length; index++ ) { %>

    <div class="container">
      <div class="row">
        <div class="col-7 mx-auto shadow-sm">
          <input
            type="text"
            placeholder="Add Task"
            class="form-control my-2 text-center py-2 bg-light"
            name="task"
            value="<%= alltasks[index].task %>"
            disabled
          />

          <div class="d-flex w-100 justify-content-around">
            <form action="/edit" method="post">
              <button class="btn btn-success mx-auto">Edit</button>
            </form>
            <form action="/delete" method="post">
              <input type="hidden" value="<%=alltasks[index]._id%>" name="id" />
              <button class="btn btn-danger mx-auto">Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </body>
</html>
